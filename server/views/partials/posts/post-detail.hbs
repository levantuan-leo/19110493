<article class="post post-{{post.id}}">
  <div class="post-title">
    <h2>{{post.title}}</h2>
    <div class="post-action">
      <a href="/post/edit/{{post.id}}" class="button muted-button edit">
        Edit Post
      </a>
      <button class="button delete" onclick="deletePost('{{post.id}}')">
        <span>-</span>
      </button>
    </div>
  </div>
  <div>
    {{> posts/post-author}} |
    {{> posts/time-ago timestamp=post.date}}
  </div>
  <p class="post-content">{{post.content}}</p>

  {{> posts/reaction-buttons postId=post.id}}
  {{> posts/post-comments commentList=post.comments postId=post.id}}
</article>